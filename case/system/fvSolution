FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{

    "(pcorr|pcorrFinal)"
    {
        solver PCG;
        //tolerance        1e-20;
        tolerance	1e-12;
	relTol           0;

        preconditioner         DIC;

        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator     faceAreaPair;
        mergeLevels      1;
	maxIter	50000;
    }


    p
    {
        solver PCG;
        tolerance        1e-12;
        relTol           0;
        preconditioner   DIC;
        cacheAgglomeration true;
        nCellsInCoarsestLevel 10;
        agglomerator     faceAreaPair;
        mergeLevels      1;
	maxIter 10000;
    }

    pFinal
    {
        $p;
	//tolerance	1e-20;
        tolerance	1e-12;
	relTol          0;
	maxIter 10000;
    }

    "(U|k|omega|epsilon|nuTilda|cellDisplacement)"
    {
        solver          PBiCG;
        preconditioner        DILU;
     //   nSmooth         0;
        tolerance       1e-9;
	minIter		5;
        relTol          0;
	maxIter		100000;
    }

    "(U|k|omega|epsilon|nuTilda|cellDisplacement)Final"
    {
        $U;
        relTol          0;
    }
}

PIMPLE
{
    CorrectPhi		yes;
    nOuterCorrectors     1;
    nCorrectors         1; //3
    nNonOrthogonalCorrectors 1; //3
    turbOnFinalIterOnly  true;
    pRefCell 0;
    pRefValue 0;
    consistent yes;
}

relaxationFactors
{
    fields
    {
        p               1.0;
    }
    equations
    {
        U               1.0;
        nuTilda         1.0;
    }
}

cache
{
	grad(U);
}

