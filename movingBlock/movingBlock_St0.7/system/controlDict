FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     pimpleFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         5.8;

deltaT          1e-4;

writeControl    adjustableRunTime;

writeInterval   0.001;

purgeWrite     	1;

writeFormat     ascii;

writePrecision  7;

writeCompression off;

timeFormat      general;

timePrecision   6;

runTimeModifiable true;
adjustTimeStep yes;
maxCo 0.9;

//libs ("libIBTurbulenceModels.so");

functions
{
/*
    forces1
    {
        type            forces;
        libs            ("libforces.so");
        writeControl    writeTime;
        writeInterval   1;
        patches         (airfoil);
        CofR		(0 0 0);
        log             on;
        rho  rhoInf;
        rhoInf 1;
    }
*/

    #includeFunc Q

    coefficient
    {
	type		forceCoeffs;
	libs		("libforces.so");
	writeControl	timeStep;
	writeInterval	1;
	patches		(block);
	CofR		(0.5 0 0);
	log		on;
	rho		rhoInf;
	rhoInf		1;
	liftDir		(0 1 0);
	dragDir		(-1 0 0);
	pitchAxis	(0 0 1);
	magUInf		1.0;
	lRef		1.0;
	Aref		1.0;
    }

    vorticity
    {
	type		vorticity;
	libs		(fieldFunctionObjects);
	writeControl	writeTime;
    }

    yPlus
    {
	type		yPlus;
	libs		(fieldFunctionObjects);
	writeControl	writeTime;
	//writeInterval	1;
	log 		true;
    }
}



